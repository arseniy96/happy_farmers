<!DOCTYPE html>
<html>
  <head>
    <title>HappyFarmers</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="menu-background">
      <div class="menu">
        <% if !user_signed_in? %>
          <span>
            <%= link_to 'Главная', root_path, class: "link-menu" %>
            <%= link_to 'Регистрация', new_user_registration_path, class: "link-menu" %>
            <%= link_to 'Вход', new_user_session_path, class: "link-menu" %>
          </span>
        <% else %>
          <span>
            <%= link_to 'Личный кабинет', user_path(current_user), class: "link-menu" %>
            <%= link_to 'Продукты', products_path, class: "link-menu" %>
            <%= link_to 'Выйти', destroy_user_session_path, :method => :delete, class: "link-menu" %>
          </span>
        <% end %>
      </div>
    </div>

    <% if current_page?('/') %>
      <div class="bg-image-index"></div>
    <% elsif current_page?(new_user_registration_path) || current_page?(new_user_session_path) %>
      <div class="bg-image-reg"></div>
    <% elsif current_page?(user_path) %>
      <div class="bg-image-cabinet"></div>
    <% end %>

    <div>
      <div class="container">

        <%= yield %>

      </div>
    </div>
  </body>
</html>
