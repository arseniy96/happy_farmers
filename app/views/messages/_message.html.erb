<div class="card">
  <div class="card-block">
    <div class="row">
      <div class="col-md-2">
        <%= image_tag message.user.avatar.url(:medium) %>
      </div>
      <div class="col-md-10">
        <p class="card-text">
          <span class="text-muted"><%= message.user.username %> at <%= message.timestamp %> says</span><br>
          <%= message.text %>
        </p>
      </div>
    </div>
  </div>
</div>