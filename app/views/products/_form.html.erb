<p>
  <%= f.text_field :name, placeholder: 'Название', class: "form-control form-field", style: "width: 30%;" %>
</p>
<p>
  <%= f.text_area :description, placeholder: 'Описание', class: "form-control form-field", style: "width: 30%; height: 80px" %>
</p>
<p>
  <%= f.text_field :price, placeholder: 'Цена', class: "form-control form-field", style: "width: 20%;" %>
</p>
<p>
  <%= f.collection_select :category_id, Category.all, :id, :title, {}, {class: "form-control form-field price-field", style: "width: 30%;"} %>
</p>
<p>
  <%= f.submit 'Создать', class: "btn btn-success"  %>
</p>
